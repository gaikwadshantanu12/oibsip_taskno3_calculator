<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="bottom"
    android:background="@color/black">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_value"
        android:text=""
        android:fontFamily="@font/amiko_semibold"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textAlignment="viewEnd"
        android:padding="15dp"
        android:layout_marginBottom="60dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_margin="5dp">

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_ac"
                android:background="@drawable/special_sign_button_background"
                android:text="AC"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete_one_char"
                android:background="@drawable/special_sign_button_background"
                android:drawableStart="@drawable/backspace"
                android:drawableTint="@color/white"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_mod"
                android:background="@drawable/special_sign_button_background"
                android:text="%"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_divide"
                android:background="@drawable/sign_button_color"
                android:text="/"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>
        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_7"
                android:background="@drawable/numeric_button_background"
                android:text="7"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_8"
                android:background="@drawable/numeric_button_background"
                android:text="8"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_9"
                android:background="@drawable/numeric_button_background"
                android:text="9"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_multiply"
                android:background="@drawable/sign_button_color"
                android:text="*"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>
        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_4"
                android:background="@drawable/numeric_button_background"
                android:text="4"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_5"
                android:background="@drawable/numeric_button_background"
                android:text="5"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_6"
                android:background="@drawable/numeric_button_background"
                android:text="6"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_subtract"
                android:background="@drawable/sign_button_color"
                android:text="-"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>
        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_1"
                android:background="@drawable/numeric_button_background"
                android:text="1"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_2"
                android:background="@drawable/numeric_button_background"
                android:text="2"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_3"
                android:background="@drawable/numeric_button_background"
                android:text="3"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_add"
                android:background="@drawable/sign_button_color"
                android:text="+"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>
        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_0"
                android:background="@drawable/zero_button_background"
                android:text="0"
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"
                android:layout_span="2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_dot"
                android:background="@drawable/numeric_button_background"
                android:text="."
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_equals"
                android:background="@drawable/sign_button_color"
                android:text="="
                android:fontFamily="@font/amiko_semibold"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:padding="20dp"/>
        </TableRow>

    </TableLayout>

</LinearLayout>